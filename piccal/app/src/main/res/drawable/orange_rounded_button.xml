<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#DA3E00" />
         <gradient android:angle="-90" android:startColor="#DA6344" android:endColor="#FF860B"  />
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#DA3E00" />
         <solid android:color="#DA5400"/>
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#DA3E00" />
         <gradient android:angle="-90" android:startColor="#FF860B" android:endColor="#DA6344" />
     </shape>
 </item>
</selector>
