<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#00E700" />
         <gradient android:angle="-90" android:startColor="#008D00" android:endColor="#00C900"  />
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#00E700" />
         <solid android:color="#00E700"/>
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#00E700" />
         <gradient android:angle="-90" android:startColor="#00C900" android:endColor="#008D00" />
     </shape>
 </item>
</selector>
