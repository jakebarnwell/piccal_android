<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.mit.piccal.SuccessActivity"
    android:background="@drawable/yellow_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/success_msg_textView"
        android:id="@+id/success_textView"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textColor="#007400"
        android:textSize="38dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/success_textView"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_event_button"
            android:id="@+id/viewEvent_Button"
            android:layout_below="@+id/success_textView"
            android:layout_centerHorizontal="true"
            android:onClick="viewEvent"
            android:textSize="22dp"
            android:background="@drawable/green_rounded_button"
            android:textColor="#fefffd"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_margin="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_additional_event_button"
            android:id="@+id/addAdditionalEvent_Button"
            android:layout_below="@+id/viewEvent_Button"
            android:layout_centerHorizontal="true"
            android:onClick="addAnotherEvent"
            android:textSize="22dp"
            android:background="@drawable/orange_rounded_button"
            android:textColor="#fffbf8"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_margin="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/space"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quit_button"
            android:id="@+id/quit_Button"
            android:layout_below="@+id/addAdditionalEvent_Button"
            android:onClick="quitApp"
            android:layout_centerHorizontal="true"
            android:textSize="22dp"
            android:textColor="#fffbf8"
            android:background="@drawable/red_rounded_button"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_margin="20dp"
            />

    </LinearLayout>
</RelativeLayout>
